ARG VERSION=33
FROM fedora:${VERSION}

ARG NODEJS=lts
ARG GDAL=""
ENV GDAL=${GDAL}

RUN \
  dnf install -y curl rsync && \
  curl -fsSL https://rpm.nodesource.com/setup_${NODEJS}.x | bash - && \
  if [ "${NODEJS}" -le 16 ]; \
  then dnf module install -y nodejs:${NODEJS}/default; \
  else dnf install -y nodejs; fi && \
  dnf groupinstall -y 'Development Tools' && \
  dnf install -y g++ git python

RUN if [ "${GDAL}" = "shared" ]; then dnf install -y gdal-devel; fi

COPY entrypoint.sh /

ENTRYPOINT ["/entrypoint.sh"]
